---
import "@fontsource-variable/assistant";
import "@fontsource-variable/cinzel";
import { SEO } from "astro-seo";
import "../assets/style.css";
import "aos/dist/aos.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
  pubDate?: Date;
}

const {
  title,
  description = "Logic Moon is the ambient music project of Tobias Lorsbach. His music is a blend of ambient, drone, and neoclassical music.",
  image = "/og-default.jpg",
  type = "website",
  pubDate,
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "https://logic-moon.de"
);
const imageURL = new URL(image, Astro.site || "https://logic-moon.de");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="keywords"
      content="Logic Moon, Tobias Lorsbach, Ambient music, Drone, Neoclassical, texture, music"
    />
    <meta name="description" content={description} />
    <meta name="author" content="Tobias Lorsbach" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <link
      href="data:image/x-icon;base64,"
      rel="icon"
      type="image/x-icon"
    />
    <title>{title}</title>

    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Logic Moon" />
    <meta property="og:locale" content="en_US" />

    {
      pubDate && (
        <meta
          property="article:published_time"
          content={pubDate.toISOString()}
        />
      )
    }
    {pubDate && <meta property="article:author" content="Tobias Lorsbach" />}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:creator" content="@logicmoon" />

    <script>
      import AOS from "aos";
      import Lenis from "@studio-freight/lenis";
      const lenis = new Lenis();

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
      document.onreadystatechange = function () {
        AOS.init();
      };
    </script>

    <script>
      var _paq = (window._paq = window._paq || []);
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);
      (function () {
        var u = "//matomo.tobeworks.de/";
        _paq.push(["setTrackerUrl", u + "matomo.php"]);
        _paq.push(["setSiteId", "2"]);
        var d = document,
          g = d.createElement("script"),
          s = d.getElementsByTagName("script")[0];
        g.async = true;
        g.src = u + "matomo.js";
        s.parentNode.insertBefore(g, s);
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
