---
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latestPost = posts[0];
---

{
  latestPost && (
    <section class="main-section bg-primary-500" id="news">
      <div class="container mx-auto px-4 py-16">
        <h2 class="cinzel text-4xl md:text-5xl text-center mb-12 text-white">
          Latest News
        </h2>

        <div class="max-w-4xl mx-auto">
          <article class="bg-white rounded-lg shadow-xl overflow-hidden">
            {latestPost.data.image && (
              <div class="aspect-video overflow-hidden">
                <img
                  src={latestPost.data.image}
                  alt={latestPost.data.title}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            <div class="p-8">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-2xl md:text-3xl font-semibold text-primary-500 leading-tight">
                  <a
                    href={`/news/${latestPost.slug}`}
                    class="hover:text-primary-400 transition-colors duration-200">
                    {latestPost.data.title}
                  </a>
                </h3>
                <time
                  datetime={latestPost.data.pubDate.toISOString()}
                  class="text-grey-500 text-sm whitespace-nowrap ml-4">
                  {latestPost.data.pubDate.toLocaleDateString("de-DE", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </time>
              </div>

              <p class="text-grey-700 text-lg leading-relaxed mb-6">
                {latestPost.data.description}
              </p>

              <div class="flex flex-col sm:flex-row gap-4 justify-between items-start sm:items-center">
                <a
                  href={`/news/${latestPost.slug}`}
                  class="bg-primary-500 hover:bg-primary-400 text-white font-bold py-3 px-6 rounded transition-colors duration-200 inline-block">
                  Weiterlesen
                </a>

                <a
                  href="/news"
                  class="text-primary-500 hover:text-primary-400 transition-colors duration-200 font-medium">
                  Alle News anzeigen â†’
                </a>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>
  )
}

<style>
  .main-section {
    min-height: 60vh;
  }
</style>
